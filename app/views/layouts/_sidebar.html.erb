<div id="nav_wrapper">
  <% if user_signed_in?  %>
    <div id="logo"></div>
    <ul id="main_nav" class="clear">
      <li>
        <%= link_to_unless_current('Home', root_path) do |link| %>
          <span class="current_main_nav"><%= link %></span>
          <span class="current_main_nav_tip"></span>
        <% end %>
      </li>
      <% unless !user_has_team? %>
        <li>
          <% if Draft.is_completed? %>
            <%= link_to_unless_current('My Team', my_roster_mm_team_url(get_team_for_current_user)) do |link| %>
                <span class="current_main_nav"><%= link %></span>
                <span class="current_main_nav_tip"></span>
            <% end %>
          <% else %>
            <%= link_to_unless_current('Draft Team', preferred_players_mm_team_url(get_team_for_current_user)) do |link| %>
                <span class="current_main_nav"><%= link %></span>
                <span class="current_main_nav_tip"></span>
            <% end %>
          <% end %>
        </li>
      <% end %>
        <% if Draft.is_completed? %>
        <li>
          <%= link_to_unless_current('MM Rosters', mm_teams_rosters_path) do |link| %>
              <span class="current_main_nav"><%= link %></span>
              <span class="current_main_nav_tip"></span>
          <% end %>
        </li>
        <li>
          <%= link_to_unless_current('Player Ownership', mm_teams_preferred_players_ownership_path) do |link| %>
              <span class="current_main_nav"><%= link %></span>
              <span class="current_main_nav_tip"></span>
          <% end %>
        </li>
  <!--       <li>
          <%= link_to_unless_current('Player Scoring', player_scoring_index_path) do |link| %>
            <span class="current_main_nav"><%= link %></span>
            <span class="current_main_nav_tip"></span>
          <% end %>
        </li> -->
        <li>
      <% end %>
        <%= link_to_unless_current('Bracket', bracket_index_path) do |link| %>
          <span class="current_main_nav"><%= link %></span>
          <span class="current_main_nav_tip"></span>
        <% end %>
      </li>
      <% if current_user.is_admin? %>
        <li>
          <%= link_to_if(controller_path.split('/').first != 'admin', 'Admin', admin_index_path) do |link| %>
            <span class="current_main_nav"><%= link %></span>
            <span class="current_main_nav_tip"></span>
          <% end %>
        </li>
      <% end %>
    </ul>
  <% end %>
  <div class="clear"></div>
</div>