<%= form_for(@ncaa_player) do |f| %>
<% if @ncaa_player.errors.any? %>
    <div id="error_explanation">
      	<h2><%= pluralize(@ncaa_player.errors.count, "error") %> prohibited this ncaa_player from being saved:</h2>
    </div>
 <% end %>

	<div class="form-group">
	    First Name<br />
	    <%= f.text_field :first_name, class: 'form-control' %>
	</div>
	<div class="form-group">
	    Last Name<br />
	    <%= f.text_field :last_name, class: 'form-control' %>
	</div>
	<div class="form-group">
	    NCAA Team<br />
		<%= collection_select(:ncaa_player, :ncaa_team_id, NcaaTeam.all(:order => "school"), :id, :school) %>
	</div>
	<div class="form-group">
		<%= f.label :position %><br />
		<%= select(:ncaa_player, :position, NcaaPlayer::POSITIONS) %><br/>
	</div>
	<div class="form-group">
	    PPG.<br />
	    <%= f.text_field :ppg_avg, class: 'form-control' %>
	</div>
  	<div class="actions padding-md text-center">
	    <%= f.submit "Submit", class: 'btn btn-success' %>
	</div>
<% end %>
