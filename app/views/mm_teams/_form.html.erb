<%= form_for(@mm_team) do |f| %>
  <% if @mm_team.errors.any? %>
    <div id="error_explanation">
      <% @mm_team.errors.each do |attr,msg| %>
          <h2><%= msg %></h2>
      <% end %>
    </div>
  <% end %>

	<div class="form-group">
	    Team Name<br />
	    <%= f.text_field :name, class: 'form-control' %>
	</div>
  <div class="actions">
    <%= f.submit 'Submit', class: 'btn btn-success' %>
  </div>
<% end %>